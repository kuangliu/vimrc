{
    "python.jediEnabled": false,
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    },

    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.keyMappings.global": {
      "i": false,
      "d": false,
      "x": false,
      "ii": false,
      "ic": false,
      "il": false,
      "dd": false,
      "dD": false,
      "df": false,
      "dF": false,
      "i": "open:vsplit",
      "b": "open:split",
      "x": "cutFile",
      "D": "delete"
    }
}
